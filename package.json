{
  "name": "hermes-git",
  "version": "0.2.4",
  "description": "Intent-driven Git, guided by AI. Turn natural language into safe, explainable Git operations.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "hermes": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "dev": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "git",
    "cli",
    "ai",
    "copilot",
    "developer-tools",
    "productivity",
    "github-copilot",
    "git-workflow",
    "developer-experience"
  ],
  "author": "Simbarashe Mandebvu",
  "homepage": "https://github.com/simandebvu/hermes-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simandebvu/hermes-cli.git"
  },
  "bugs": {
    "url": "https://github.com/simandebvu/hermes-cli/issues"
  },
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "inquirer": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
